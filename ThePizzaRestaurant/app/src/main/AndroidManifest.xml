<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cs213.thepizzarestaurant">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ThePizzaRestaurant">

        <activity
            android:name=".MainActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".CurrentOrderActivity"
            android:label="@string/current_order_label"
            android:parentActivityName=".MainActivity" />

        <activity android:name=".StoreOrderActivity"
            android:label="@string/store_order_label"
            android:parentActivityName=".MainActivity" />

        <activity android:name=".ModifyPizzaActivity"
            android:label="@string/modify_pizza_label"
            android:parentActivityName=".MainActivity" />

    </application>

</manifest>
